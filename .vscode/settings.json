{
	"easysass.excludeRegex": "_.*.scss",
	"easysass.targetDir": "./public/static/css/",
	"easysass.compileAfterSave": true,
	"easysass.formats": [
		{
			"format": "compressed",
			"extension": ".min.css"
		}
	],

	"git.autofetch": false,
	
	"phpcs.enable": true,
	"phpcs.standard": "PSR2",
	"phpcs.autoConfigSearch": true,
	"php.validate.executablePath": "/usr/bin/php",
	"phpcs.executablePath": "./vendor/bin/phpcs"
}