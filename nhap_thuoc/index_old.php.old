	<script defer>
		$(document).ready(()=>{
			$("a").click(function (e){
				e.preventDefault();
				let id = $(this).attr('data-target');
				
				$(".active[data-toggle='tab']").addClass('text-light').removeClass("active text-dark");
				$(this).addClass("active text-dark");
				
				$("iframe").removeClass("show");
				$("#" + id).addClass("show");
			});

			resizeiframe();
			$(window).resize(()=>{
				resizeiframe();
			})
		});


		function resizeiframe() {
			let height = $(".frame-container").get(0).scrollHeight;
			$("iframe").css("height", height + "px");
		}
	</script>
