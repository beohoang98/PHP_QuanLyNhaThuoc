<phpunit bootstrap="./vendor/autoload.php">
    <testsuite name="unit">
        <directory>./tests</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory>./api</directory>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>